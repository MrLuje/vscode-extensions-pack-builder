{
    "name": "vscode-extentions-pack-builder",
    "displayName": "Extentions Pack builder",
    "description": "Easily create extensions packs so you can have only the relevant extensions enabled for a given project.",
    "version": "0.0.1",
    "publisher": "mrluje",
    "license": "MIT",
    "engines": {
        "vscode": "^1.22.0"
    },
    "icon": "images/icon.png",
    "repository": "https://github.com/MrLuje/vscode-extensions-pack-builder",
    "categories": [
        "Extension Packs"
    ],
    "activationEvents": [
        "onCommand:packBuilder.createPack"
    ],
    "keywords": [
        "pack",
        "template",
        "group",
        "extension"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "packBuilder.createPack",
                "title": "Extensions pack: Create pack"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && npm run copy_files",
        "compile": "tsc -p ./",
        "watch": "npm run copy_files && tsc -watch -p ./",
        "copy_files": "copyfiles -f src/extension_readme.md src/extension_package.json images/pack_icon.png out",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "build": "vsce package -o ./build/vscode-extentions-pack-builder.vsix",
        "publish-market": "npm run build && vsce publish --packagePath ./build/vscode-extentions-pack-builder.vsix"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.9.4",
        "@types/sanitize-filename": "^1.1.28",
        "copyfiles": "^2.0.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "sanitize-filename": "^1.6.1"
    }
}
